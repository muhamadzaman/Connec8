<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <div class="d-flex align-items-center">
        <%# <%= image_tag(@user.avatar.url(:thumb), class: "mr-3 rounded-circle", style: "width: 64px; height: 64px;") %>
        <h1><%= @user.name %></h1>
      </div>
      <p><strong>Username:</strong> <%= @user.username %></p>
    </div>
  </div>

  <div class="row mt-3 mb-3">
    <div class="col-12">
      <h2>Posts</h2>
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">
            <p class="card-text"><%= post.body %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
